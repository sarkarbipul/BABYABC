<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_background"
    tools:context="com.logicaltriangle.babyabc.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center">
        <!--  Number button   -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/learn_number_btn_id"
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:background="@drawable/boy_character" />
        </LinearLayout>
        <!--  Letter button   -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/learn_letter_btn_id"
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:background="@drawable/girl_character"/>

        </LinearLayout>
    </LinearLayout>
    <!--  Info button   -->
    <Button
        android:id="@+id/info_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/info"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>
</RelativeLayout>